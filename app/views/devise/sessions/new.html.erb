<div style="height: 100vh; display: flex; justify-content: center; align-items: center;
            background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)),
            url('https://38.media.tumblr.com/6d954cc99cfb048b215177b6e3030c89/tumblr_mqerz44HWb1ql41ypo1_500.gif') no-repeat center center fixed;
            background-size: cover; padding: 20px;">
  <div style="max-width: 400px; background: #f8f9fa; padding: 1.5rem; border-radius: 1rem; box-shadow: 0 0 15px rgba(0,0,0,0.3); width: 100%;">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h2 style="text-align: center; margin-bottom: 1.5rem;">Log in</h2>

      <div style="margin-bottom: 1rem;">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "form-control" },
                    label_html: { class: "form-label fw-semibold" } %>

        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "form-control" },
                    label_html: { class: "form-label fw-semibold" } %>

        <%= f.input :remember_me, as: :boolean, input_html: { class: "form-check-input" }, label_html: { class: "form-check-label" } if devise_mapping.rememberable? %>
      </div>

      <div style="text-align: center; margin-bottom: 1rem;">
        <%= f.button :submit, "Log in", class: "btn btn-lg w-100 rounded-pill",
                     style: "background-color: #ff6600; border-color: #ff6600; color: white;" %>
      </div>
    <% end %>

    <div style="text-align: center; margin-top: 1rem;">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
