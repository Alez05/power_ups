<div class="container">
  <h1 class="text-success"><%= @powerUp.product_name %></h1>

  <div class="container">
    <div class="d-flex flex-wrap gap-3">
        <div class="card" style="width: 200px;">
          <div class="card-body">
            <%= image_tag "#{@powerUp.image_url}", alt: "image", class: "card-img-top" %>
            <p class="card-title"><%= @powerUp.product_name %></p>
            <p class="card-text"> <%= @powerUp.description %></p>
            <p class="card-text">Â£ <%= @powerUp.price %></p>
            <p class="card-text"> <%= @powerUp.category %></p>
            <p class="card-text"> <%= @powerUp.stock_quantity %></p>
            <p class="card-text"> <%= @powerUp.user.username %></p>
          </div>
  <%# This section handles the Add to Cart form for the power-up %>
          <div class="mt-3">
            <%= form_with url: orders_path, method: :post do %>
              <%= hidden_field_tag :power_up_id, @powerUp.id %>
              <%= hidden_field_tag :quantity, 1, min: 1 %>
              <% if current_user %>
                <%= hidden_field_tag :user_id, current_user.id %>
              <% end %>
              <%= hidden_field_tag :total_price, @powerUp.price %>
              <%= submit_tag "Buy now", class: "btn btn-outline-secondary" %>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>
