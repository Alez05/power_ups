<div class="container">
  <h1 class="text-warning">Create your listing</h1>

  <div class="card-body">
    <%= simple_form_for @powerUp do |f| %>
      <%= f.input :product_name %>
      <%= f.input :price %>
      <%= f.input :description %>
      <%= f.input :category %>
      <%= f.input :stock_quantity %>
      <%= f.input :image_url, label: "Upload image"%>
      <%= f.submit "Submit", class: "btn btn-outline-warning"%>
    <% end %>
  </div>
</div>
